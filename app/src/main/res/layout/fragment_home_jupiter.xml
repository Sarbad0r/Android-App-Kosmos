<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jupiter.fragment_home"
    android:background="@color/black"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_frame_jupiter">
        <ImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_jupiter_switcher"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_place_jupiter"
        android:layout_below="@+id/image_frame_jupiter"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn_pre_jupiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/previews"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_next_jupiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/next"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_place_jupiter">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_1link_jupiter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jupiter_about_1"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:id="@+id/text_2_link_jupiter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jupiter_about_2"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</RelativeLayout>